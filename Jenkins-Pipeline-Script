node 
{
    def mavenHome = tool name: "Maven3.9.7"
    stage('CheckoutCode') { // To get code from git
        git branch: 'development', credentialsId: '1d9a4103-94f2-4f2d-8d38-1e784145d1f1', url: 'https://github.com/Jayakrishna052/maven-web-application.git'
    }
    
    stage('Build') { // Run the maven build
        sh "whoami"
        sh "${mavenHome}/bin/mvn clean package"
        sh "chmod 777 target/maven-web-application.war" // Add this line to give full permissions to the WAR file
    }
    
    stage('SonarQubeReport') { // Execute SonarQubeReport
        sh "${mavenHome}/bin/mvn clean sonar:sonar"
    }
    /*
